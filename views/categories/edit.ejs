<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Category</title>
    <link rel="stylesheet" href="/output.css">
  </head>
  <body class="min-h-screen bg-gradient-to-t from-zinc-900 via-gray-900 to-slate-900 text-white flex flex-col">
    <%- include('../books/navbar.ejs', { user: typeof user !== 'undefined' ? user : null }) %>
    <div class="flex-1 flex flex-col animate-fade">
      <div class="flex flex-1 items-center justify-center py-8">
        <div class="card bg-base-200 border border-base-300 shadow-2xl p-6 max-w-2xl w-full min-h-[320px]">
          <h1 class="card-title text-4xl font-bold mb-8 text-center">Edit Category</h1>
          <% if (messages.error) { %>
            <div class="alert alert-error mb-6 text-lg"><%- messages.error %></div>
          <% } %>
          <form action="/categories/edit/<%= category.id_category %>" method="POST" class="space-y-6">
            <div>
              <label class="block text-lg font-semibold mb-2">Name</label>
              <input type="text" name="name" value="<%= category.name %>" autocomplete="off" class="input input-bordered input-lg w-full" required />
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-wide mx-auto block">Update</button>
          </form>
        </div>
      </div>
    </div>
    <%- include('../footer.ejs') %>
  </body>
</html>