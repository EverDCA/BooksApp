<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <link rel="stylesheet" href="/output.css">
  </head>
  <body class="min-h-screen bg-gradient-to-t from-zinc-900 via-gray-900 to-slate-900 text-white flex flex-col">
    <%- include('../books/navbar.ejs') %>
    <div class="max-w-2xl mx-auto px-4 pt-6 sm:pt-8">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Categories</h1>
        <a href="/categories/add" class="btn btn-primary btn-lg">Add Category</a>
      </div>
      <% if (messages.success) { %>
        <div class="alert alert-success mb-4"><%- messages.success %></div>
      <% } %>
      <% if (messages.error) { %>
        <div class="alert alert-error mb-4"><%- messages.error %></div>
      <% } %>
      <div class="overflow-x-auto card bg-base-200 border border-base-300 shadow-lg">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((category, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= category.name %></td>
                <td class="flex flex-wrap gap-2">
                  <a href="/categories/edit/<%= category.id_category %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/categories/delete/<%= category.id_category %>" onclick="return confirm('Are you sure?')" class="btn btn-error btn-sm">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="mt-6 flex justify-center">
        <div class="join">
          <button class="join-item btn" onclick="window.location.href='?page=<%= currentPage - 1 %>'" <%= currentPage === 1 ? 'disabled' : '' %>>Previous</button>
          <span class="join-item btn btn-ghost">Page <%= currentPage %> of <%= totalPages %></span>
          <button class="join-item btn" onclick="window.location.href='?page=<%= currentPage + 1 %>'" <%= currentPage === totalPages ? 'disabled' : '' %>>Next</button>
        </div>
      </div>
    </div>
  </body>
</html>