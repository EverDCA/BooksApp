<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books</title>
    <link rel="stylesheet" href="/output.css">
  </head>
  <body class="min-h-screen bg-gradient-to-t from-zinc-900 via-gray-900 to-slate-900 text-white">
    <%- include('../books/navbar.ejs') %>
    <div class="max-w-2xl mx-auto px-4 pt-6 sm:pt-8">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Books</h1>
        <a href="/books/add" class="bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-lg shadow transition">Add Book</a>
      </div>
      <% if (messages.success) { %>
        <div class="bg-green-600/20 text-green-300 px-4 py-2 rounded-lg text-sm border border-green-500/30 mb-4">
          <%- messages.success %>
        </div>
      <% } %>
      <% if (messages.error) { %>
        <div class="bg-red-600/20 text-red-300 px-4 py-2 rounded-lg text-sm border border-red-500/30 mb-4">
          <%- messages.error %>
        </div>
      <% } %>
      <div class="overflow-x-auto bg-white/5 backdrop-blur-sm rounded-2xl shadow-lg">
        <table class="min-w-full text-sm sm:text-base text-gray-200">
          <thead class="bg-white/10 text-gray-300 uppercase text-xs">
            <tr>
              <th class="text-left px-4 sm:px-6 py-3">#</th>
              <th class="text-left px-4 sm:px-6 py-3">Name</th>
              <th class="text-left px-4 sm:px-6 py-3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach((book, i) => { %>
              <tr class="border-t border-white/10 hover:bg-white/10 transition">
                <td class="px-4 sm:px-6 py-3"><%= i + 1 %></td>
                <td class="px-4 sm:px-6 py-3"><%= book.name %></td>
                <td class="px-4 sm:px-6 py-3 flex flex-wrap gap-2">
                  <a href="/books/edit/<%= book.id_book %>" class="bg-yellow-500 hover:bg-yellow-600 text-black px-3 py-1 rounded text-sm shadow transition">Edit</a>
                  <a href="/books/delete/<%= book.id_book %>" onclick="return confirm('Are you sure?')" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm shadow transition">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="mt-6 flex justify-between items-center">
        <button class="bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-lg shadow transition" onclick="window.location.href='?page=<%= currentPage - 1 %>'" <%= currentPage === 1 ? 'disabled' : '' %>>Previous</button>
        <span>Page <%= currentPage %> of <%= totalPages %></span>
        <button class="bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-lg shadow transition" onclick="window.location.href='?page=<%= currentPage + 1 %>'" <%= currentPage === totalPages ? 'disabled' : '' %>>Next</button>
      </div>
    </div>
  </body>
</html>
