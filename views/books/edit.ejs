<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Book</title>
    <link rel="stylesheet" href="/output.css">
  </head>
  <body class="min-h-screen bg-gradient-to-t from-zinc-900 via-gray-900 to-slate-900 text-white flex flex-col">
    <%- include('../books/navbar.ejs') %>
    <div class="max-w-2xl mx-auto px-4 pt-6 sm:pt-8">
      <div class="card bg-base-200 border border-base-300 shadow-lg p-8">
        <h1 class="card-title text-2xl font-bold mb-6">Edit Book</h1>
        <% if (messages.error) { %>
          <div class="alert alert-error mb-4"><%- messages.error %></div>
        <% } %>
        <form action="/books/edit/<%= book.id_book %>" method="POST" class="space-y-4">
          <div>
            <label class="block text-sm font-medium mb-1">Name</label>
            <input type="text" name="name" value="<%= book.name %>" class="input input-bordered w-full" required />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">ISBN</label>
            <input type="text" name="isbn" value="<%= book.isbn %>" class="input input-bordered w-full" required />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Year Published</label>
            <input type="number" name="year_published" value="<%= book.year_published %>" class="input input-bordered w-full" required />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Number of Pages</label>
            <input type="number" name="num_pages" value="<%= book.num_pages %>" class="input input-bordered w-full" required />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Author</label>
            <select name="id_author" class="select select-bordered w-full" required>
              <option value="">Selecciona un autor</option>
              <% authors.forEach(author => { %>
                <option value="<%= author.id_author %>" <%= book.id_author == author.id_author ? 'selected' : '' %>><%= author.name %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Category</label>
            <select name="id_category" class="select select-bordered w-full" required>
              <option value="">Selecciona una categor√≠a</option>
              <% categories.forEach(category => { %>
                <option value="<%= category.id_category %>" <%= book.id_category == category.id_category ? 'selected' : '' %>><%= category.name %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Publisher</label>
            <select name="id_publisher" class="select select-bordered w-full" required>
              <option value="">Selecciona una editorial</option>
              <% publishers.forEach(publisher => { %>
                <option value="<%= publisher.id_publisher %>" <%= book.id_publisher == publisher.id_publisher ? 'selected' : '' %>><%= publisher.name %></option>
              <% }) %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary btn-wide">Save</button>
        </form>
      </div>
    </div>
  </body>
</html>
