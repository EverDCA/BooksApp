<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome</title>
    <link rel="stylesheet" href="/output.css">
  </head>
  <body class="min-h-screen bg-gradient-to-t from-zinc-900 via-gray-900 to-slate-900 text-white flex flex-col">
    
    <%- include('./books/navbar.ejs') %>

    <div class="flex-1 grid grid-cols-1 md:grid-cols-3 grid-rows-4 md:grid-rows-2 gap-6 p-6 place-items-center">
      <!-- Bienvenida y enlaces -->
      <div class="row-span-1 col-span-1 bg-white/10 border border-white/10 rounded-2xl p-8 flex flex-col justify-center shadow-xl w-full h-full hover:bg-indigo-800/30 transition duration-250 group">
        <h2 class="text-3xl font-bold mb-4 text-center">Bienvenido</h2>
        <ul class="space-y-4 text-center flex flex-col">
          <li><a href="/authors" class=" group-hover:p-1.5 hover:border-1 hover:rounded-lg hover:bg-black/40 font-semibold  transition text-xl group-hover:text-blue-300/80">Autores</a></li>
          <li><a href="/books" class=" group-hover:p-1.5 hover:border-1 hover:rounded-lg hover:bg-black/40 font-semibold  transition text-xl group-hover:text-violet-300/80">Libros</a></li>
          <li><a href="/publishers" class=" group-hover:p-1.5 hover:border-1 hover:rounded-lg hover:bg-black/40 font-semibold  transition text-xl group-hover:text-yellow-300/80">Editoriales</a></li>
          <li><a href="/categories" class=" group-hover:p-1.5 hover:border-1 hover:rounded-lg hover:bg-black/40 font-semibold  transition text-xl group-hover:text-green-300/80">Categorías</a></li>
        </ul>
      </div>
      <!-- Mejores libros (carrusel) -->
      <div class="row-span-1 col-span-1 md:col-span-2 bg-white/10 border border-white/10 rounded-2xl p-8 flex flex-col justify-center items-center shadow-xl w-full h-full hover:bg-sky-800/30 transition duration-250">
        <h2 class="text-xl font-bold mb-4 tracking-wide text-center">NUESTROS MEJORES LIBROS!</h2>
        <div class="w-full flex gap-4 overflow-x-auto pb-2 justify-center">
          <% featuredBooks.forEach(book => { %>
            <div class="min-w-[220px] bg-zinc-900/80 border border-violet-900 rounded-xl p-4 flex flex-col items-center shadow-md">
              <div class="font-bold text-lg text-violet-300 mb-1"><%= book.name %></div>
              <div class="text-xs text-gray-400 mb-1">Autor: <%= book.Author ? book.Author.name : '-' %></div>
              <div class="text-xs text-gray-400 mb-1">Categoría: <%= book.Category ? book.Category.name : '-' %></div>
              <div class="text-xs text-gray-400 mb-1">Editorial: <%= book.Publisher ? book.Publisher.name : '-' %></div>
              <div class="text-xs text-gray-500">Publicado: <%= book.year_published %></div>
            </div>
          <% }) %>
        </div>
      </div>
      <!-- Estadísticas -->
      <div class="row-span-1 col-span-1 md:col-span-2 bg-white/10 border border-white/10 rounded-2xl p-8 flex flex-col justify-center items-center shadow-xl w-full h-full hover:bg-emerald-800/30 transition duration-250 group">
        <h2 class="text-lg font-bold mb-2 text-center">ESTADÍSTICAS</h2>
        <p class="text-gray-300 text-center">(Número de libros, autores, categorías y editoriales)</p>
        <div class="flex gap-8 mt-4 justify-center">
          <div class="flex flex-col items-center">
            <span class="text-3xl font-bold text-violet-400 stat-animate " data-value="<%= stats.books %>">0</span>
            <span class="text-xs text-gray-400">Libros</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-3xl font-bold text-blue-400 stat-animate " data-value="<%= stats.authors %>">0</span>
            <span class="text-xs text-gray-400">Autores</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-3xl font-bold text-green-400 stat-animate " data-value="<%= stats.categories %>">0</span>
            <span class="text-xs text-gray-400">Categorías</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-3xl font-bold text-yellow-400 stat-animate " data-value="<%= stats.publishers %>">0</span>
            <span class="text-xs text-gray-400">Editoriales</span>
          </div>
        </div>
      </div>
      <!-- Libro recomendado -->
      <div class="row-span-1 col-span-1 bg-white/10 border border-white/10 rounded-2xl p-8 flex flex-col justify-center items-center shadow-xl w-full h-full hover:bg-pink-800/30 transition duration-250">
        <h2 class="text-lg font-bold mb-2 text-center">LIBRO RECOMENDADO DEL DÍA!</h2>
        <% if (recommendedBook) { %>
          <div class="font-bold text-lg text-violet-300 mb-1"><%= recommendedBook.name %></div>
          <div class="text-xs text-gray-400 mb-1">Autor: <%= recommendedBook.Author ? recommendedBook.Author.name : '-' %></div>
          <div class="text-xs text-gray-400 mb-1">Categoría: <%= recommendedBook.Category ? recommendedBook.Category.name : '-' %></div>
          <div class="text-xs text-gray-400 mb-1">Editorial: <%= recommendedBook.Publisher ? recommendedBook.Publisher.name : '-' %></div>
          <div class="text-xs text-gray-500">Publicado: <%= recommendedBook.year_published %></div>
        <% } else { %>
          <div class="text-gray-400 italic">No hay libros para recomendar.</div>
        <% } %>
      </div>
    </div>
    <script>
      // Animación de estadísticas (más lenta)
      document.querySelectorAll('.stat-animate').forEach(el => {
        const end = parseInt(el.dataset.value, 10);
        let current = 0;
        const step = Math.max(1, Math.floor(end / 80));
        const interval = setInterval(() => {
          current += step;
          if (current >= end) {
            el.textContent = end;
            clearInterval(interval);
          } else {
            el.textContent = current;
          }
        }, 35);
      });
    </script>
    
  </body>
</html>
